<h1>new</h1>

.notifications
    - flash.each do |key, value|
      = content_tag(:div, value, class: key)
      
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>


<% end %>

